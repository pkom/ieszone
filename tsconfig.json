{
  "compileOnSave": false,
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "target": "es2018",
    "module": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@iz/interface": [
        "backend/interfaces"
      ],
      "@iz/enum": [
        "backend/enums"
      ],
      "@iz/utils": [
        "backend/utils"
      ],
      "@iz/entities": [
        "backend/shared/entities"
      ],
      "@iz/shared": [
        "backend/shared/decorators",
        "backend/shared/filters",
        "backend/shared/guards"
      ],
      "@env": ["frontend/school/src/environments/environment"],
      "@core/*": ["frontend/school/src/app/core/*"]      
    }
  },
  "exclude": [
    "dist",
    "**/tmp/"
  ]
}